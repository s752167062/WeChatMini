<view class='input_class'>
     <image src='{{inputIcon}}' mode="scaleToFill" class='input_icon'></image>
     <input class="input_com" placeholder='{{inputHint}}' bindconfirm='{{confirmTap}}' style='flex:1;width:90%;padding-left:12rpx;' bindinput='inputListener' bindconfirm='inputConfirm' value='{{inputValue}}' type='{{inputType}}' password='{{isPassword}}' confirm-type='{{confirmType}}'></input>
     <view class="clear_view">
        <image class="{{isClearShow?'clearImgShow':'clearImgHide'}}" src='clear.png' bindtap='clearTap' mode='widthFix'></image>
     </view>
     
</view>