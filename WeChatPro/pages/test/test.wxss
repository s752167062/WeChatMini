
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.swiper_root{
  box-sizing: border-box;
  width: 93%;
  margin: 20rpx auto;
  height: 70%;
  border-radius: 15px;
  overflow: hidden;
  position: relative;
}
.slide_image{
  position: absolute;
  width: 100%;
  height: 100%;
  align-content: center;
  border-radius: 6%;
}

.dots-image{
  height: 2%;
  width:10%;
  
}

/*喜欢等按钮*/
.view_likes{
  position: absolute;
  width: 100%;
  height: 15%;
  bottom: 0;
  box-sizing: border-box; 
  display: flex;
  justify-content: space-between;
}

.like_image{
  width: 100%;
  height: 100%;
  margin: 0;
}

.nolike_image{
